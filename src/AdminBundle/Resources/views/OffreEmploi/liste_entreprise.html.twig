{% extends '::base.html.twig' %}

    {% block body %}
        <div id="page-wrapper">
            <div id="page-inner">


                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Toutes les Entreprises<small></small>
                        </h1>
                    </div>
                </div>




                <div class="row">

                    <div class="col-md-12 col-sm-24 col-xs-24">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Toutes les Entreprises
                            </div>
                            <div class="panel-body">
                                <a class="btn btn-primary" href="{{ path('admin_entreprise_create') }}"> NOUVELLE ENTREPRISE</a>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Nom entreprise</th>
                                            <th>Secteur d'activité</th>
                                            <th>Téléphone entreprise</th>
                                            <th>Email entreprise</th>
                                            <th>Adresse physique</th>
                                            <th>Notification CV posté</th>
                                            <th>Statut</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% if listEntreprise|length >0 %}
                                            {% for entreprise in listEntreprise %}
                                                <tr>
                                                    <th scope="row">{{ entreprise.idUser }}</th>
                                                    <td><a href="{{ path('entreprise_show', { 'id': entreprise.id }) }}">{{ entreprise.nomEntreprise }}</a></td>
                                                    <td>{{ entreprise.secteurActivite }}</td>
                                                    <td>{{ entreprise.telMobilResponsable }}</td>
                                                    <td>{{ entreprise.emailResponsable }}</td>
                                                    <td>{{ entreprise.adressePhysique }}</td>
                                                    <td>{{ entreprise.notificationCvPoste }}</td>

                                                </tr>
                                            {% endfor %}
                                        {% endif %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /. ROW  -->

            </div>
            <!-- /. PAGE INNER  -->
        </div>
    {% endblock body %}
{% extends '::base.html.twig' %}
    {% block body %}
            <div id="page-inner">


                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Tous les secteurs d'activité <small></small>
                        </h1>
                    </div>
                </div>




                <div class="row">

                    <div class="col-md-12 col-sm-24 col-xs-24">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Tous les secteurs
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Libellé</th>
                                            <th>Etat</th>
                                            <th><i class="fa fa-cog fa-fw" aria-hidden="true"></i></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for secteur in listSecteur %}
                                            <tr>
                                                <th scope="row">{{ secteur.id }}</th>
                                                <td>{{ secteur.libele }}</td>
                                                {% if secteur.etat == 0 %}
                                                    <td>Désactiver</td>
                                                {% else %}
                                                    <td>Activer</td>
                                                {% endif %}
                                                <td></td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /. ROW  -->
            <!-- /. PAGE INNER  -->
        </div>
    {% endblock body %}
  